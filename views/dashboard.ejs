<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <%- include ./partials/sidebar %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include ./partials/topbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid" id="container-memo">
          <!-- Page Heading -->
          <div
            class="d-sm-flex align-items-center justify-content-between mb-4"
          >
            <h1 class="h2 mb-0 text-gray-900"><strong>Dashboard</strong><hr class="title-line"></h1>
            

          </div>

          <div class="container-dashboard ">
          <!-- Main Content /.container-fluid -->
                    <!-- Content Row -->


                    <div class="row">
                      

                      <!-- Content Column -->
                      <div class="col-lg-6 mb-4 test-sidebar" id="scroll-overflow1">
                        <h3 class="latest-memo text-gray-800" ><strong>Latest Announcements </strong><hr class="line-dashboard"></h3>
                          <% let memoID = memo.reverse().length %> 
                          <% for (let i = 0; i < memo.length; i++ ){ %> 
                            <% if (i < 3) { %>
                            <% let memoDate = JSON.stringify(memo[i].date) %> 
                          <div class="card border-left-info mb-4" id="card<%= i %>" >
                            <div style="font-weight:500; font-size: large;" class="card-header text-primary"><%= memo[i].title %></div>
                              <div class="card-body">
                                <p class="card-text"><%= memo[i].desc %></p>
                                <a  href="/uploads/<%= memo[i].newFileName %>" target="_blank"
                                  >Read more!</a>
                              </div>
                              <p style="font-style: oblique;" class="text-right card-text"><small class="text-muted">Posted on <%= memoDate.substr(1,16) %>&nbsp;&nbsp;  </small></p>
                          </div>
                          <% }; %>
                          <% } %>

                      </div>
                      <div class="col-lg-1 mb-1 ">
                        <!-- Empty flexbox  -->

                      </div>
                      <div class="col-lg-5 mb-4 test-sidebar" id="scroll-overflow" >
                        <h3 class="text-gray-800" > <strong>In Next 7 Days</strong><hr class="line-dashboard"></h3>

                          <% 
                            let indexID = 0 
                          %>
                           
                           <% for (let i = 0; i < leaveDataInfo.length; i++) { %>
                            <% if (leaveDataInfo[i].status === 'Approved') { %> 
                            <% let date = leaveDataInfo[i].fromDate %>
                            <% let dd = String(date.getDate()).padStart(2, '0'); %> 
                            <% let mm = String(date.getMonth() + 1).padStart(2, '0'); /* January is 0 */ %> 
                            <% let yyyy = date.getFullYear(); %>
                            
                            <% date = dd + '/' + mm + '/' + yyyy; %> 
                            
                            <% let date1 = leaveDataInfo[i].toDate %>
                            <% let dd1 = String(date1.getDate()).padStart(2, '0'); %> 
                            <% let mm1 = String(date1.getMonth() + 1).padStart(2, '0'); /* January is 0 */ %> 
                            <% let yyyy1 = date1.getFullYear(); %>

                            <% date1 = dd1 + '/' + mm1 + '/' + yyyy1; %> 
                            <div class="card border-left-success mb-3"> 
                              <div class="card-body" >
                                  <div class="row no-gutters align-items-right">
                                      <div class="col mr-1">
                                          <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            <%= leaveDataInfo[i].department %></div>
                                          <div class="h5 mb-0 font-weight-bold text-gray-800 mb-1"><%= leaveDataInfo[i].fullName %></div>
                                          
                                        </div>
                                        <strong><%= leaveDataInfo[i].leavecat %></strong>  
                                        
                                      <div class="col-auto ml-3">
                                          <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                      </div>

                                  </div>

                                  <h5><strong><%= date %> - <%= date1 %></strong></h5>
                                  <h5><strong><%= leaveDataInfo[i].timetype %></strong></h5>
                              </div>
                            </div>

                            
                           <% indexID++; %>
                           <% } %> 
                           <% } %>


                      </div>
                      
                  </div>

        </div>
          <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->
        <br>
      </div>

      <%- include ./partials/footer %>
    </div>
  </div>
</body>
